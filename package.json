{
  "name": "time-shift",
  "displayName": "time-shift",
  "description": "Track time in files locally",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:time-shift.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "time-shift.enable",
        "title": "Enable time-shift"
      },
      {
        "command": "time-shift.disable",
        "title": "Disable time-shift"
      },
      {
        "command": "time-shift.stats",
        "title": "Show current time-shift stats"
      }
    ],
    "configuration": {
      "title": "time-shift",
      "properties": {
        "time-shift.noEnable": {
          "type": "boolean",
          "default": false,
          "description": "If we are to skip auto-enabling time-shift"
        },
        "time-shift.throttle": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "description": "How often to throttle writes and updates in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "clean": "npx rimraf dist out",
    "clean:vscode": "npx rimraf .vscode-test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "husky": "^8.0.0",
    "mocha": "^10.1.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  }
}
